<html>
    <head>
        <title>Movier App</title>
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    </head>

    <body class="bg-dark text-white">
        <h1 id="searchHeading" class="text-grey">Search Result: <span class="text-white"> "<%= searchQuery.toUpperCase() %>" </span> </h1>
        
        <div class="card mb-5 w-75 text-white bg-dark">
            <a class="btn btn-primary" href="/search">Go Back</a>
        </div>

        <% data['results'].forEach((movie)=> { %>
            <div class="card mb-5 w-75 text-white bg-dark">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="https://image.tmdb.org/t/p/w600_and_h900_bestv2<%= movie["poster_path"] %> " class="card-img img-fluid">
                    </div>
    
                    <div class="col-md-8 border border-white">
                        <div class="card-body">
                            <h2 class="card-title"> <%= movie["original_title"] %> </h2>
                            <hr class="bg-white">
                            <br>
                            <p class="card-text"> <%= movie["overview"] %> </p>
                            <hr class="bg-white">
                            
                            <p class="card-text"><b>Date Published:</b> <%= movie["release_date"] %> </p>
                            <p class="card-text"><b>Total Votes:</b> <%= movie["vote_count"] %> </p>
                            <p class="card-text"><b>Average Rating:</b> <%= movie["vote_average"] %> </p>
                            <p class="card-text"><b>Popularity:</b> <%= movie["popularity"] %>  </p>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>

        <footer class="footer col-md-12 text-center mb-3"> 
            Made with ❤️ by <span class="small"><a href="https://iroleh.me" target="_blank" rel="noopener noreferrer">Vincent Iroleh</a></span>
        </footer>
       
        
    </body>
</html>